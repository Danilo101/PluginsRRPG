					mesaDoPersonagem.activeChat:rolarDados(sheet.dvs, "Pontos de Vigor de " .. sheet.nome,
						function (rolagem)
							local maximo = 0;
							local media = 0;
							for i = 1, #rolagem.ops, 1 do 
								local operacao = rolagem.ops[i]; 
								if operacao.tipo == "dado" then   
